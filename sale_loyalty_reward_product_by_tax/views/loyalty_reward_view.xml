<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_loyalty_reward_tax_product_tree" model="ir.ui.view">
        <field name="name">loyalty.reward.tax.product.tree</field>
        <field name="model">loyalty.reward.tax.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="tax_id" />
                <field name="product_id" />
            </tree>
        </field>
    </record>
    <record id="view_loyalty_reward_tax_product_form" model="ir.ui.view">
        <field name="name">loyalty.reward.tax.product.form</field>
        <field name="model">loyalty.reward.tax.product</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                    <field name="tax_id" />
                    <field name="product_id" />
                </group>
            </form>
        </field>
    </record>
    <record id="action_loyalty_reward_tax_product" model="ir.actions.act_window">
        <field name="name">Loyalty Reward Tax Product</field>
        <field name="res_model">loyalty.reward.tax.product</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_loyalty_reward_tax_product_tree" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first Loyalty Reward Tax Product
            </p>
        </field>
    </record>
    <menuitem
        id="menu_loyalty_reward_tax_product"
        name="Loyalty Reward Tax Products"
        parent="sale.product_menu_catalog"
        action="action_loyalty_reward_tax_product"
    />

</odoo>
